<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TripBooking">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <include
            android:id="@+id/toolbar_trip_booking"
            layout="@layout/appbar_layout"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KHATU SHYAM TRIP"
        android:textSize="28sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="10sp"

        android:gravity="center"/>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Khatushyam Mandir is located in the Sikar District of Rajasthan. The temple is erected in the heart of the place and is completely made of Makrana Marble."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="330sp"
        android:elevation="20sp"

        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="330sp"
            android:orientation="vertical"
            android:padding="5sp">

            <ImageView
                android:id="@+id/khatu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/khatushyam" />

            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/khatu"
                android:fontFamily="sans-serif-condensed"
                android:text="SOURCE :"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dehi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="70dp"
                android:fontFamily="sans-serif-condensed"
                android:text="DELHI"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/source"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif-condensed"
                android:text="DESTINATION :"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/khatushyam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/destination"
                android:layout_marginEnd="43dp"
                android:fontFamily="sans-serif-condensed"
                android:text="RAJASTHAN"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/charges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/destination"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif-condensed"
                android:text="charges :"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/dehi"
                android:layout_alignTop="@+id/charges"
                android:fontFamily="sans-serif-condensed"
                android:text="Rs. 800"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/charges"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif-condensed"
                android:text="date :"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/date"
                android:layout_marginEnd="31dp"
                android:fontFamily="sans-serif-condensed"
                android:text="1/2/19 - 3/2/19"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date"
                android:layout_marginTop="10sp"
                android:fontFamily="sans-serif-condensed"
                android:text="MODE :"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/dehi"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif-condensed"
                android:text="BY BUS"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval"
        android:text="PAY NOW"
        android:layout_marginTop="15sp"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent" />
</LinearLayout>


</ScrollView>

    </LinearLayout>